<header id="gh-head" class="top-header">
    <div class="logo">
        <a href="{{@site.url}}">
            {{#if @site.logo}}
                <img class="image-132" src="{{@site.logo}}" alt="{{@site.title}}" />
            {{else}}
                <div class="site-logo-text">{{@site.title}}</div>
            {{/if}}
        </a>
    </div>
    <div class="header-navigation-area">
        <nav class="navigation-container">
            {{navigation}}
        </nav>
        <div class="dr-benri-breast-cancer-focus">医療関係者向け情報サイト</div>
    </div>
    <button class="mobile-menu-toggle" aria-label="Menu">
        <span class="hamburger-icon">
            <span></span>
            <span></span>
            <span></span>
        </span>
    </button>
</header>

<div class="mobile-menu-overlay">
    <div class="mobile-menu-container">
        <div class="mobile-menu-header">
            <div class="mobile-menu-logo">
                {{#if @site.logo}}
                    <img src="{{@site.logo}}" alt="{{@site.title}}" />
                {{else}}
                    <div class="site-logo-text">{{@site.title}}</div>
                {{/if}}
            </div>
            <button class="mobile-menu-close" aria-label="Close menu">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>
        <div class="mobile-menu-content">
            <nav class="mobile-navigation">
                {{navigation}}
            </nav>
            <div class="mobile-menu-footer">
                <div class="dr-benri-info">医療関係者向け情報サイト</div>
            </div>
        </div>
    </div>
</div>
